<h1 align="center">Create new Improvement / Issue Category</h1>


<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :name %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "Category Name", autofocus: true %>
    </div>
  </div>


  <div class="form-hgroup">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
    
  </div>
  
<% end %>


<div class="col-xs-6 col-xs-offset-5">
  [ <%= link_to "Cancel request and return to issues listing", articles_path %> ]
</div>

