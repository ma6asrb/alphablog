<%= render 'shared/errors', obj: @article_note %>

<%= form_for([@article, @article_note], :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :note %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :note, class: "form-control", placeholder: "Note", autofocus: true %>
    </div>
  </div>


  <div class="form-hgroup">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
    
  </div>
  
<% end %>


<div class="col-xs-6 col-xs-offset-5">
  [ <%= link_to "Cancel request and return to issue", article_path(@article) %> ]
</div>
